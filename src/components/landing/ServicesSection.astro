---
import Icon from '../ui/Icon.astro';
import type { PageContent } from '../../data/content';

interface Props {
  services: PageContent['services'];
}

const { services } = Astro.props;
---
<section id="services" class="section bg-white">
  <div class="section-container" data-reveal>
    <h2 class="h2">{services.heading}</h2>
    <p class="lead mt-3">{services.lead}</p>
    <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {services.items.map((item, index) => (
        <article class="card card-hover p-6">
          <div class="inline-flex size-10 items-center justify-center rounded-full bg-primary-100 text-primary-700">
            {index === 0 ? <Icon name="line-chart" class="h-5 w-5" /> : index === 1 ? <Icon name="graduation-cap" class="h-5 w-5" /> : <Icon name="plant" class="h-5 w-5" />}
          </div>
          <h3 class="mt-4 text-xl font-semibold text-bark-700">{item.title}</h3>
          <p class="text-bark-700/80 mt-2">{item.text}</p>
          <ul class="mt-4 space-y-1 text-bark-700/90">
            {item.bullets.map((bullet) => (
              <li class="flex gap-2">
                <span class="mt-2 size-1.5 rounded-full bg-primary-700/70"></span>
                <span>{bullet}</span>
              </li>
            ))}
          </ul>
          <div class="mt-6">
            <a href="#contact" class="inline-flex items-center gap-1 text-primary-700 hover:underline">
              {services.more}
              <Icon name="arrow-right" class="h-4 w-4" />
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
