---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import Icon from '../ui/Icon.astro';
import type { PageContent } from '../../data/content';

interface Props {
  about: PageContent['about'];
  aboutImg: ImageMetadata;
}

const { about, aboutImg } = Astro.props;
---
<section id="about" class="section bg-white">
  <div class="section-container grid items-start gap-10 lg:grid-cols-2" data-reveal>
    <div>
      <Image
        src={aboutImg}
        alt="bnature team"
        widths={[480, 768, 1024]}
        sizes="(max-width: 1023px) 100vw, 50vw"
        class="w-full rounded-2xl ring-1 ring-primary-200/60"
        loading="lazy"
      />
    </div>
    <div>
      <h2 class="h2">{about.heading}</h2>
      <p class="lead mt-4">{about.text}</p>

      <div class="mt-6 grid gap-4 sm:grid-cols-2">
        <article class="card p-5">
          <div class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-primary-100 text-primary-700">
            <Icon name="flask" class="h-4.5 w-4.5" />
          </div>
          <h3 class="mt-3 font-semibold text-bark-700">{about.callouts.scienceTitle}</h3>
          <p class="mt-1 text-sm text-bark-700/80">{about.callouts.scienceText}</p>
        </article>
        <article class="card p-5">
          <div class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-primary-100 text-primary-700">
            <Icon name="target" class="h-4.5 w-4.5" />
          </div>
          <h3 class="mt-3 font-semibold text-bark-700">{about.callouts.impactTitle}</h3>
          <p class="mt-1 text-sm text-bark-700/80">{about.callouts.impactText}</p>
        </article>
      </div>

      <ul class="prose-basic mt-6 space-y-2">
        {about.bullets.map((bullet) => (
          <li>{bullet}</li>
        ))}
      </ul>

      <div class="mt-6">
        <a href="#contact" class="btn-primary">{about.cta}<Icon name="arrow-right" class="h-4 w-4" /></a>
      </div>
    </div>
  </div>
</section>
