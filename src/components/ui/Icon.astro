---
interface Props {
  name:
    | 'leaf'
    | 'badge-check'
    | 'line-chart'
    | 'graduation-cap'
    | 'plant'
    | 'sprout'
    | 'mail'
    | 'map-pin'
    | 'arrow-right'
    | 'chevron-down'
    | 'flask'
    | 'target';
