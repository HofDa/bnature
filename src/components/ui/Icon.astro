  name === 'leaf' && (
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" class={className}><path d="M11 20A7 7 0 0 1 4 13C4 7 10 3 20 4c-1 10-5 16-11 16Z" /><path d="M11 20c0-6 3-10 9-13" /></svg>
  )
}
