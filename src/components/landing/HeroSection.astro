---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import Icon from '../ui/Icon.astro';
import type { PageContent } from '../../data/content';

interface Props {
  hero: PageContent['hero'];
  heroImg: ImageMetadata;
}

const { hero, heroImg } = Astro.props as Props;
---
<section id="home" class="section bg-sand-100" tabindex="-1">
  <div class="section-container grid items-center gap-10 lg:grid-cols-2" data-reveal>
    <div>
      <span class="badge gap-1 whitespace-nowrap text-[11px] sm:gap-2 sm:text-sm">
        <Icon name="leaf" class="h-3.5 w-3.5" />
        {hero.badge}
        <span class="ml-1 inline-flex items-center text-primary-700 sm:gap-1">
          <Icon name="badge-check" class="h-3.5 w-3.5 sm:h-4 sm:w-4" />
          <span class="hidden sm:inline">{hero.verified}</span>
        </span>
      </span>
      <h1 class="h1 mt-6">{hero.heading}</h1>
      <p class="lead mt-5">{hero.subheading}</p>
      <div class="mt-8 grid gap-3 sm:flex sm:flex-wrap">
        <a href="#contact" class="btn-primary w-full sm:w-auto">{hero.ctaPrimary}</a>
        <a href="#services" class="btn-ghost w-full sm:w-auto">{hero.ctaSecondary}</a>
      </div>
      <p class="mt-4 text-sm text-bark-700/70">{hero.expertise}</p>
    </div>
    <div class="relative aspect-[16/10] overflow-hidden rounded-3xl shadow-sm ring-1 ring-black/5 lg:h-[420px] lg:aspect-auto">
      <Image
        src={heroImg}
        alt="Biodiversitaet Monitoring"
        widths={[640, 960, 1280, 1600]}
        sizes="(max-width: 1023px) 100vw, 50vw"
        class="absolute inset-0 h-full w-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
    </div>
  </div>
</section>
